<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="com.yusufyildiz.livenessdetection.view.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/action_introFragment_to_livenessFragment"
            app:destination="@id/livenessFragment" />
    </fragment>
    <fragment
        android:id="@+id/livenessFragment"
        android:name="com.yusufyildiz.livenessdetection.view.LivenessFragment"
        android:label="fragment_liveness"
        tools:layout="@layout/fragment_liveness" />
</navigation>